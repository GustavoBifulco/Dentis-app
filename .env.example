# ====================================================================================
# DENTIS OS - ENVIRONMENT VARIABLES
# ====================================================================================
# Copy this file to .env and fill in your actual values
# Required variables are marked with [REQUIRED]
# Optional variables are marked with [OPTIONAL] - features will be disabled if not set
# ====================================================================================

# -----------------------------
# DATABASE (REQUIRED)
# -----------------------------
# PostgreSQL connection string
DATABASE_URL="postgres://user:pass@localhost:5432/dentis"  # [REQUIRED]

# -----------------------------
# AUTHENTICATION (REQUIRED)
# -----------------------------
# Clerk authentication service
# Get your keys from: https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY="pk_test_..."  # [REQUIRED]
CLERK_SECRET_KEY="sk_test_..."  # [REQUIRED]

# --------------------------------------
# FILE STORAGE (OPTIONAL)
# --------------------------------------
# S3-compatible storage (AWS S3 or Cloudflare R2)
# If not configured, file upload feature will be disabled
S3_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"  # [OPTIONAL]
S3_REGION="auto"  # [OPTIONAL] Use "auto" for Cloudflare R2
S3_ACCESS_KEY="..."  # [OPTIONAL]
S3_SECRET_KEY="..."  # [OPTIONAL]
S3_BUCKET_NAME="dentis-uploads"  # [OPTIONAL]
S3_PUBLIC_URL="https://pub-....r2.dev"  # [OPTIONAL] Public CDN URL for uploaded files

# --------------------------------------
# AI ASSISTANT (OPTIONAL)
# --------------------------------------
# OpenAI API for AI chat feature
# Get your key from: https://platform.openai.com/api-keys
# If not configured, AI Assistant feature will be disabled
OPENAI_API_KEY="sk-..."  # [OPTIONAL]

# --------------------------------------
# PAYMENTS (OPTIONAL)
# --------------------------------------
# Stripe for payment processing
# Get your keys from: https://dashboard.stripe.com/apikeys
# If not configured, payment features will be disabled
STRIPE_SECRET_KEY="sk_test_..."  # [OPTIONAL]
STRIPE_PUBLISHABLE_KEY="pk_test_..."  # [OPTIONAL]
STRIPE_WEBHOOK_SECRET="whsec_..."  # [OPTIONAL] For webhook signature verification

# --------------------------------------
# EMAIL (OPTIONAL)
# --------------------------------------
# SMTP configuration for sending emails
# If not configured, email features will be disabled
SMTP_HOST="smtp.hostinger.com"  # [OPTIONAL]
SMTP_PORT="465"  # [OPTIONAL] Usually 465 (SSL) or 587 (TLS)
SMTP_USER="noreply@dentis.com.br"  # [OPTIONAL]
SMTP_PASS="..."  # [OPTIONAL]
SMTP_FROM="Dentis OS <noreply@dentis.com.br>"  # [OPTIONAL]

# --------------------------------------
# WHATSAPP (OPTIONAL)
# --------------------------------------
# WhatsApp Business API for sending messages
# If not configured, WhatsApp automation will be disabled
WHATSAPP_API_KEY="..."  # [OPTIONAL]
WHATSAPP_PHONE_NUMBER_ID="..."  # [OPTIONAL]

# --------------------------------------
# SERVER CONFIGURATION
# --------------------------------------
PORT=3000  # Server port
NODE_ENV="production"  # "development" or "production"

# --------------------------------------
# SECURITY (DEVELOPMENT ONLY)
# --------------------------------------
# WARNING: NEVER set this to "true" in production!
DISABLE_AUTH="false"  # [DEVELOPMENT] Bypass authentication for local testing


# Asaas Integration
ASAAS_ENV=sandbox
ASAAS_API_KEY=your_api_key_here
ASAAS_WEBHOOK_SECRET=your_webhook_secret_here
